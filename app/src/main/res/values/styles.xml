<resources>

    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <item name="android:windowIsTranslucent">true</item>	// 避免 activity 切换间隙出现黑屏
        <item name="android:windowBackground">@android:color/white</item>	// 修改 app 启动时默认背景
        
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="notify_btn_style">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:background">?android:listChoiceBackgroundIndicator</item>
    </style>

</resources>
