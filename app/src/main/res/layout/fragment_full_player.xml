<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_playback">

    <LinearLayout
        android:id="@+id/controllers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fullscreen_bg_gradient"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:shadowColor="@android:color/black"
            android:shadowRadius="20"
            android:singleLine="true"
            android:text="song name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#E5FFFFFF" />

        <TextView
            android:id="@+id/tv_singer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:shadowColor="@android:color/black"
            android:shadowRadius="20"
            android:singleLine="true"
            android:text="singer name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#E5CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/im_share"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im_next"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_btn_share"
                android:tint="@android:color/white"
                android:tintMode="src_in" />

            <ImageButton
                android:id="@+id/im_download"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im_next"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_btn_download"
                android:tint="@android:color/white"
                android:tintMode="src_in" />

            <ImageButton
                android:id="@+id/im_favorite"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im_next"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_btn_love_white"
                android:tintMode="src_in" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <ImageView
                android:id="@+id/im_prev"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/ic_btn_pre_white"
                android:tint="#ffffff" />

            <CheckBox
                android:id="@+id/cb_play_pause"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@android:color/transparent"
                android:button="@drawable/fullscreen_play_pause"
                android:gravity="center_vertical"
                android:src="@drawable/ic_btn_play_white" />

            <ImageView
                android:id="@+id/im_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/ic_btn_next_white"
                android:tint="#ffffff" />

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/toolbar_container"
        layout="@layout/custom_toolbar" />

    <include layout="@layout/bottom_control" />

</FrameLayout>
